mixin arrow()
	+b.swiper-button-hand--next.swiper-button-next 
		+icon('chevron-left')
	+b.swiper-button-hand--prev.swiper-button-prev 
		+icon('chevron-left')
	
mixin control-sl()
	.control-wrap
		+arrow()
		.swiper-pagination

