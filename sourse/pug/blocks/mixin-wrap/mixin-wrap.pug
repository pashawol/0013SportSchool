mixin card-item(i,t,tn, p, strong)
	+b.card-item.block-with-lazy
		+e.img-wrap.img-bg
			img.lazy-bg(src="#" data-src=`img/${i}.jpg`, alt="")
		+e.caption.bg-pattern
			+e.title
				.ttu= t
				if tn
					+e.title-name=tn
			if !tn
				.strong Группы:
				+e.text 3 - 7 лет, 7 - 12 лет, 12 - 15 лет
			
			if p
				+e.text= p
			
			+e.footer
				if tn
					+e.row.row
						.col-6
							a.btn.btn-primary.btn-block(href="#") Подробнее
						
						.col-6
							a.btn.btn-info.btn-block(href="#") Записаться
				else
					a.btn.btn-info.btn-block(href="#") Записаться
	// /.card-item
